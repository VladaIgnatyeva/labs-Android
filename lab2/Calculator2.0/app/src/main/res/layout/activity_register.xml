<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"

    tools:context=".RegisterActivity"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg2"
        android:fontFamily="serif-monospace"
        android:paddingVertical="45dp"
        android:text="Create an Account"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="#AFAFAF"
        android:textSize="35sp"
        android:textStyle="normal"
        android:id="@+id/createAccText"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/createAccText"
        >

        <TextView
            android:id="@+id/textErrorReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="5dp"
            android:text=""
            android:textColor="#810909"
            android:textSize="12sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:text="Name:"
            android:textColor="#434a52"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="30dp"

            android:hint="Name" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:paddingTop="5dp"
            android:text="Username:"
            android:textColor="#434a52"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="30dp"

            android:hint="Username" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:paddingTop="5dp"
            android:text="Password:"
            android:textColor="#434a52"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="30dp"
            android:hint="Password"
            android:inputType="textPassword"

            android:paddingVertical="0dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:paddingTop="5dp"
            android:text="Confirm:"
            android:textColor="#434a52"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/passwordConfirm"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="30dp"
            android:hint="Password"
            android:inputType="textPassword"

            android:paddingVertical="0dp" />


        <Button
            android:id="@+id/signUp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/button_bg"
            android:fontFamily="serif-monospace"
            android:text="Sign up"
            android:textColor="#b8b5bd"
            android:textSize="30sp" />

        <Button
            android:id="@+id/signUpCancel"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="0dp"
            android:background="@drawable/button_bg"
            android:fontFamily="serif-monospace"
            android:text="Cancel"
            android:textColor="#b8b5bd"
            android:textSize="30sp" />
    </LinearLayout>
</RelativeLayout>